@using VoluntariosConectadosRD.Services
@using VoluntariosConectadosRD.Models.DTOs
@{
    ViewData["Title"] = "Voluntariado Conectado RD - Conectamos personas con causas que importan";
    var platformStats = ViewBag.PlatformStats as DashboardStatsDto;
    var featuredOpportunities = ViewBag.FeaturedOpportunities as IEnumerable<OpportunityListDto>;
    var hasStats = platformStats != null;
    var hasOpportunities = featuredOpportunities != null && featuredOpportunities.Any();
}

<!-- Hero Section -->
<section class="hero-section">
    <div class="hero-overlay"></div>
    <div class="container">
        <div class="hero-content">
            <h1 class="hero-title">Conectamos personas con causas que importan</h1>
            <p class="hero-subtitle">Únete a una comunidad de voluntarios que transforman vidas a través de la acción
                social.</p>
            <div class="hero-buttons">
                <a href="/Account/Registro" class="btn btn-primary btn-lg">Quiero ser voluntario</a>
                <a href="/Account/RegistroONG" class="btn btn-outline-primary btn-lg">Soy una organización</a>
            </div>
        </div>
    </div>
</section>

<!-- Platform Statistics -->
<section class="stats-section py-5" style="background: linear-gradient(135deg, #f8f9fa, #e9ecef);">
    <div class="container">
        <div class="row text-center">
            <div class="col-md-3 col-6 mb-4">
                <div class="stat-card">
                    <div class="stat-number">@(platformStats?.TotalUsers.ToString("N0") ?? "0")</div>
                    <div class="stat-label">Voluntarios Activos</div>
                </div>
            </div>
            <div class="col-md-3 col-6 mb-4">
                <div class="stat-card">
                    <div class="stat-number">@(platformStats?.TotalOrganizations.ToString("N0") ?? "0")</div>
                    <div class="stat-label">Organizaciones</div>
                </div>
            </div>
            <div class="col-md-3 col-6 mb-4">
                <div class="stat-card">
                    <div class="stat-number">@(platformStats?.ActiveOpportunities.ToString("N0") ?? "0")</div>
                    <div class="stat-label">Proyectos Activos</div>
                </div>
            </div>
            <div class="col-md-3 col-6 mb-4">
                <div class="stat-card">
                    <div class="stat-number">@(platformStats?.TotalVolunteerHours.ToString("N0") ?? "0")</div>
                    <div class="stat-label">Horas Donadas</div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Descripción del Proyecto -->
<section class="about-section">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6">
                <h2 class="section-title">¿Qué es Voluntariado Conectado RD?</h2>
                <p class="section-text">
                    Esta iniciativa busca crear una plataforma de voluntariado que conecte a organizaciones sociales con
                    personas interesadas en contribuir con su tiempo y habilidades. El éxito de este proyecto dependerá
                    de la coordinación eficaz entre los distintos equipos técnicos y de producto.
                </p>
            </div>
            <div class="col-lg-6">
                <div class="about-image">
                    <img src="~/images/voluntarios.png" alt="Voluntariado" class="img-fluid">
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Funcionalidades MVP -->
<section class="features-section">
    <div class="container">
        <h2 class="section-title text-center mb-5">Funcionalidades del MVP</h2>
        <div class="row">
            <div class="col-lg-4 col-md-6 mb-4">
                <div class="feature-card">
                    <div class="feature-icon">
                        <i class="fas fa-users"></i>
                    </div>
                    <h3>Voluntarios</h3>
                    <ul class="feature-list">
                        <li>Registrarse y gestionar perfil</li>
                        <li>Postularse a oportunidades</li>
                        <li>Hacer seguimiento de participaciones</li>
                        <li>Conectar con organizaciones</li>
                    </ul>
                </div>
            </div>
            <div class="col-lg-4 col-md-6 mb-4">
                <div class="feature-card">
                    <div class="feature-icon">
                        <i class="fas fa-building"></i>
                    </div>
                    <h3>Organizaciones</h3>
                    <ul class="feature-list">
                        <li>Publicar oportunidades</li>
                        <li>Gestionar postulaciones</li>
                        <li>Comunicarse con voluntarios</li>
                        <li>Administrar proyectos</li>
                    </ul>
                </div>
            </div>
            <div class="col-lg-4 col-md-6 mb-4">
                <div class="feature-card">
                    <div class="feature-icon">
                        <i class="fas fa-shield-alt"></i>
                    </div>
                    <h3>Administradores</h3>
                    <ul class="feature-list">
                        <li>Moderar contenido</li>
                        <li>Gestionar usuarios</li>
                        <li>Monitorear uso de la plataforma</li>
                        <li>Generar reportes</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Beneficios -->
<section class="benefits-section">
    <div class="container">
        <h2 class="section-title text-center mb-5">Beneficios de la Plataforma</h2>
        <div class="row">
            <div class="col-lg-3 col-md-6 mb-4">
                <div class="benefit-card">
                    <div class="benefit-icon">
                        <i class="fas fa-expand-arrows-alt"></i>
                    </div>
                    <h4>Escalabilidad</h4>
                    <p>Plataforma diseñada para crecer con tu organización</p>
                </div>
            </div>
            <div class="col-lg-3 col-md-6 mb-4">
                <div class="benefit-card">
                    <div class="benefit-icon">
                        <i class="fas fa-lock"></i>
                    </div>
                    <h4>Seguridad</h4>
                    <p>Protección de datos y privacidad garantizada</p>
                </div>
            </div>
            <div class="col-lg-3 col-md-6 mb-4">
                <div class="benefit-card">
                    <div class="benefit-icon">
                        <i class="fas fa-mobile-alt"></i>
                    </div>
                    <h4>Experiencia de Usuario</h4>
                    <p>Interfaz intuitiva y fácil de usar</p>
                </div>
            </div>
            <div class="col-lg-3 col-md-6 mb-4">
                <div class="benefit-card">
                    <div class="benefit-icon">
                        <i class="fas fa-rocket"></i>
                    </div>
                    <h4>Despliegue en Producción</h4>
                    <p>Listo para uso inmediato en el mundo real</p>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Featured Opportunities -->
@if (hasOpportunities)
{
    <section class="opportunities-section py-5">
        <div class="container">
            <h2 class="section-title text-center mb-5">Oportunidades Destacadas</h2>
            <div class="row">
                @foreach (var opportunity in featuredOpportunities.Take(3))
                {
                    <div class="col-lg-4 col-md-6 mb-4">
                        <div class="opportunity-card">
                            <div class="opportunity-header">
                                <h4 class="opportunity-title">@opportunity.Titulo</h4>
                                <span class="opportunity-organization">@opportunity.OrganizacionNombre</span>
                            </div>
                            <div class="opportunity-body">
                                <p class="opportunity-description">@(opportunity.Descripcion.Length > 100 ? opportunity.Descripcion.Substring(0, 100) + "..." : opportunity.Descripcion)</p>
                                <div class="opportunity-details">
                                    <small class="text-muted">
                                        <i class="fas fa-calendar me-1"></i>
                                        @opportunity.FechaInicio.ToString("dd/MM/yyyy")
                                    </small>
                                    <small class="text-muted ms-3">
                                        <i class="fas fa-users me-1"></i>
                                        @opportunity.VoluntariosRegistrados/@opportunity.VoluntariosNecesarios voluntarios
                                    </small>
                                </div>
                            </div>
                            <div class="opportunity-footer">
                                <a href="/Account/Registro" class="btn btn-primary btn-sm">Únete como voluntario</a>
                            </div>
                        </div>
                    </div>
                }
            </div>
            <div class="text-center mt-4">
                <a href="/Account/Registro" class="btn btn-outline-primary">Ver todas las oportunidades</a>
            </div>
        </div>
    </section>
}

<!-- CTA Section -->
<section class="cta-section">
    <div class="container">
        <div class="cta-content text-center">
            <h2 class="cta-title">Tu tiempo puede cambiar vidas. ¿Estás listo para empezar?</h2>
            <div class="cta-buttons">
                <a href="/Account/Registro" class="btn btn-primary btn-lg">Registrarme como Voluntario</a>
                <a href="/Account/RegistroONG" class="btn btn-outline-primary btn-lg">Registrar mi ONG</a>
            </div>
        </div>
    </div>
</section>

<style>
/* Statistics Section Styles */
.stat-card {
    background: white;
    border-radius: 12px;
    padding: 2rem 1rem;
    box-shadow: 0 4px 15px rgba(0,0,0,0.1);
    transition: transform 0.3s ease;
}

.stat-card:hover {
    transform: translateY(-5px);
}

.stat-number {
    font-size: 2.5rem;
    font-weight: 700;
    color: #7db9e8;
    margin-bottom: 0.5rem;
}

.stat-label {
    font-size: 1rem;
    color: #6c757d;
    font-weight: 500;
}

/* Opportunity Cards Styles */
.opportunity-card {
    background: white;
    border-radius: 16px;
    padding: 1.5rem;
    box-shadow: 0 4px 15px rgba(0,0,0,0.1);
    transition: all 0.3s ease;
    height: 100%;
    display: flex;
    flex-direction: column;
}

.opportunity-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 8px 25px rgba(0,0,0,0.15);
}

.opportunity-header {
    margin-bottom: 1rem;
}

.opportunity-title {
    color: #2c3e50;
    font-size: 1.2rem;
    font-weight: 600;
    margin-bottom: 0.5rem;
}

.opportunity-organization {
    color: #7db9e8;
    font-size: 0.9rem;
    font-weight: 500;
}

.opportunity-body {
    flex: 1;
    margin-bottom: 1rem;
}

.opportunity-description {
    color: #6c757d;
    font-size: 0.9rem;
    line-height: 1.5;
    margin-bottom: 1rem;
}

.opportunity-details {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
}

.opportunity-footer {
    display: flex;
    justify-content: center;
}

.opportunity-footer .btn {
    border-radius: 25px;
    padding: 0.5rem 1.5rem;
    font-weight: 500;
}

/* Responsive adjustments */
@@media (max-width: 768px) {
    .stat-number {
        font-size: 2rem;
    }
    
    .opportunity-details {
        flex-direction: column;
        gap: 0.25rem;
    }
    
    .opportunity-details small {
        margin: 0 !important;
    }
}
</style>
