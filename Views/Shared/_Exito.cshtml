@model string

<div class="modal fade" id="exitoModal" tabindex="-1" aria-labelledby="exitoModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content border-0 shadow-lg" style="border-radius: 20px; overflow: hidden;">
            <div class="modal-header border-0 text-center py-4" style="background: linear-gradient(135deg, #198754 0%, #20c997 50%, #28a745 100%);">
                <div class="w-100 text-center">
                    <div class="success-icon mb-3">
                        <i class="fas fa-check-circle text-white" style="font-size: 4rem;"></i>
                    </div>
                    <h5 class="modal-title text-white fw-bold" id="exitoModalLabel">¡Éxito!</h5>
                </div>
                <button type="button" class="btn-close btn-close-white position-absolute top-0 end-0 m-3" data-bs-dismiss="modal" aria-label="Cerrar"></button>
            </div>
            <div class="modal-body text-center py-4 px-4">
                <p class="text-muted mb-4 fs-5">
                    @(string.IsNullOrEmpty(Model) ? "La operación se completó exitosamente." : Model)
                </p>
                <div class="d-grid">
                    <button type="button" class="btn btn-success btn-lg fw-bold" data-bs-dismiss="modal" style="border-radius: 12px; padding: 12px 24px;">
                        <i class="fas fa-thumbs-up me-2"></i>Entendido
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    // Función para mostrar el modal de éxito
    function mostrarExito(mensaje = null, redirectUrl = null) {
        const modal = new bootstrap.Modal(document.getElementById('exitoModal'));
        if (mensaje) {
            const mensajeElement = document.querySelector('#exitoModal .modal-body p');
            mensajeElement.textContent = mensaje;
        }
        modal.show();
        
        // Auto-hide después de 3 segundos
        setTimeout(() => {
            const modalInstance = bootstrap.Modal.getInstance(document.getElementById('exitoModal'));
            if (modalInstance) {
                modalInstance.hide();
                
                // Redirigir después de que el modal se cierre si hay URL
                if (redirectUrl) {
                    setTimeout(() => {
                        window.location.href = redirectUrl;
                    }, 500); // Pequeña pausa para que el modal se cierre completamente
                }
            }
        }, 3000);
    }

    // Función para mostrar el modal de éxito y redirigir después
    function mostrarExitoYRedirigir(mensaje, url, tiempoEspera = 2000) {
        mostrarExito(mensaje, url);
    }

    // Limpiar TempData al cargar la página si existe
    document.addEventListener('DOMContentLoaded', function() {
        // Limpiar cualquier TempData persistente
        if (typeof sessionStorage !== 'undefined') {
            sessionStorage.removeItem('tempDataMensajeExito');
            sessionStorage.removeItem('tempDataMensajeError');
        }
    });

    // Auto-hide cuando se muestra el modal
    document.getElementById('exitoModal').addEventListener('shown.bs.modal', function () {
        setTimeout(() => {
            const modal = bootstrap.Modal.getInstance(this);
            if (modal) {
                modal.hide();
            }
        }, 3000);
    });

    // Limpiar al cerrar el modal
    document.getElementById('exitoModal').addEventListener('hidden.bs.modal', function () {
        // Limpiar cualquier TempData persistente
        if (typeof sessionStorage !== 'undefined') {
            sessionStorage.removeItem('tempDataMensajeExito');
        }
    });
</script> 