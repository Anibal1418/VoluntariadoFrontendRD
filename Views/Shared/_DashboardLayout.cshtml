@using VoluntariosConectadosRD.Models.DTOs
@using VoluntariosConectadosRD.Models.Configuration
@using Microsoft.Extensions.Options
@using System.Text.Json
@inject IOptions<ContactConfiguration> ContactOptions
@{
    var userInfoJson = Context.Session.GetString("UserInfo");
    UserInfoDto? userInfo = null;
    if (!string.IsNullOrEmpty(userInfoJson))
    {
        userInfo = JsonSerializer.Deserialize<UserInfoDto>(userInfoJson);
    }
    var contactInfo = ContactOptions.Value;
}
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/VoluntariosConectadosRD.styles.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
</head>
<body>
    <header class="dashboard-header shadow-sm bg-white">
        <div class="container-fluid d-flex align-items-center py-2 px-4">
            <div class="d-flex align-items-center flex-shrink-0">
                <a class="navbar-brand d-flex align-items-center" style="text-decoration: none; color: inherit;" href="/">
                    <div class="text-start me-2">
                        <strong class="d-block text-uppercase fw-bold" style="font-size: 1.1rem; text-align:right;">Voluntariado<br />Conectado</strong>
                    </div>
                    <span class="fw-bold rd-danger" style="font-size: 9.8em;">R</span><span class="fw-bold rd-primary" style="font-size: 9.8em;">D</span>
                </a>
            </div>
            <div class="flex-grow-1 d-flex justify-content-end">
                <nav class="dashboard-nav d-flex align-items-center" style="margin-right: 20px;">
                    @if (userInfo != null)
                    {
                        @if (userInfo.Rol == UserRole.Voluntario)
                        {
                            <!-- Volunteer Navigation -->
                            <a href="/Dashboard/Index" class="dashboard-tab @(ViewContext.RouteData.Values["Action"]?.ToString() == "Index" ? "active" : "")">Inicio</a>
                            <a href="/Events/List" class="dashboard-tab @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Events" ? "active" : "")">Oportunidades</a>
                            <a href="/Dashboard/Profile" class="dashboard-tab @(ViewContext.RouteData.Values["Action"]?.ToString() == "Profile" ? "active" : "")">Mi Perfil</a>
                        }
                        else if (userInfo.Rol == UserRole.Organizacion)
                        {
                            <!-- Organization Navigation -->
                            <a href="/Dashboard/ProfileONG" class="dashboard-tab @(ViewContext.RouteData.Values["Action"]?.ToString() == "ProfileONG" ? "active" : "")">Inicio</a>
                            <a href="/Events/Create" class="dashboard-tab @(ViewContext.RouteData.Values["Action"]?.ToString() == "Create" ? "active" : "")">Crear Evento</a>
                            <a href="/Events/Manage" class="dashboard-tab @(ViewContext.RouteData.Values["Action"]?.ToString() == "Manage" ? "active" : "")">Mis Eventos</a>
                            <a href="/Dashboard/Reportes" class="dashboard-tab @(ViewContext.RouteData.Values["Action"]?.ToString() == "Reportes" ? "active" : "")">Reportes</a>
                        }
                        else if (userInfo.Rol == UserRole.Administrador)
                        {
                            <!-- Administrator Navigation -->
                            <a href="/Dashboard/Index" class="dashboard-tab @(ViewContext.RouteData.Values["Action"]?.ToString() == "Index" ? "active" : "")">Inicio</a>
                            <a href="/Dashboard/VoluntariosAdmin" class="dashboard-tab @(ViewContext.RouteData.Values["Action"]?.ToString() == "VoluntariosAdmin" ? "active" : "")">Usuarios</a>
                            <a href="/Dashboard/ONGAdmin" class="dashboard-tab @(ViewContext.RouteData.Values["Action"]?.ToString() == "ONGAdmin" ? "active" : "")">Organizaciones</a>
                            <a href="/Dashboard/Reportes" class="dashboard-tab @(ViewContext.RouteData.Values["Action"]?.ToString() == "Reportes" ? "active" : "")">Reportes</a>
                            <a href="/Events/List" class="dashboard-tab @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Events" ? "active" : "")">Eventos</a>
                        }
                    }
                </nav>

            </div>
            <div class="d-flex align-items-center gap-3 flex-shrink-0">
                <button class="btn btn-link p-0 position-relative" title="Notificaciones">
                    <i class="bi bi-bell" style="font-size: 1.6rem; color: #0d6efd;"></i>
                </button>
                <div class="dropdown">
                    <button class="btn btn-link p-0 dropdown-toggle-no-arrow"
                            data-bs-toggle="dropdown"
                            aria-expanded="false"
                            style="text-decoration: none;">
                        <div class="card d-flex align-items-center p-2"
                             style="border-radius: 12px; border: 1px solid #e3f2fd; background: #fff;">
                            <div class="d-flex align-items-center">
                                <img src="/images/default-avatar.jpg"
                                     alt="Foto de perfil"
                                     width="50" height="50"
                                     style="border-radius: 10px; margin-right: 12px;">
                                <div>
                                    <div style="font-size: 0.8rem; color: #666;">Bienvenido de vuelta,</div>
                                    <div class="fw-bold" style="color: #333; font-size: 1rem;">@(userInfo?.Nombre ?? "Usuario")</div>
                                </div>
                                <i class="bi bi-chevron-down ms-2" style="color: #000;"></i>
                            </div>
                        </div>
                    </button>
                    <ul class="dropdown-menu dropdown-menu-end">
                        @if (userInfo != null)
                        {
                            @if (userInfo.Rol == UserRole.Voluntario)
                            {
                                <li><a class="dropdown-item" href="/Dashboard/Profile"><i class="bi bi-person me-2"></i>Mi perfil</a></li>
                                <li><a class="dropdown-item" href="/Events/List"><i class="bi bi-calendar-event me-2"></i>Buscar eventos</a></li>
                            }
                            else if (userInfo.Rol == UserRole.Organizacion)
                            {
                                <li><a class="dropdown-item" href="/Dashboard/ProfileONG"><i class="bi bi-building me-2"></i>Perfil organización</a></li>
                                <li><a class="dropdown-item" href="/Events/Create"><i class="bi bi-plus-circle me-2"></i>Crear evento</a></li>
                            }
                            else if (userInfo.Rol == UserRole.Administrador)
                            {
                                <li><a class="dropdown-item" href="/Dashboard/Index"><i class="bi bi-speedometer2 me-2"></i>Panel Admin</a></li>
                                <li><a class="dropdown-item" href="/Dashboard/VoluntariosAdmin"><i class="bi bi-people me-2"></i>Gestionar usuarios</a></li>
                                <li><a class="dropdown-item" href="/Dashboard/ONGAdmin"><i class="bi bi-buildings me-2"></i>Gestionar ONGs</a></li>
                            }
                        }
                        <li><hr class="dropdown-divider"></li>
                        <li><a class="dropdown-item" href="/Account/ChangePassword"><i class="bi bi-shield-lock me-2"></i>Cambiar contraseña</a></li>
                        <li><a class="dropdown-item" asp-controller="Account" asp-action="Logout"><i class="bi bi-box-arrow-right me-2"></i>Cerrar sesión</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </header>
    <!-- Main Content Only - No Navbar or Footer for Dashboard -->
    <main role="main">
        @RenderBody()
    </main>

    <footer class="footer-section">
        <div class="container">
            <div class="row">
                <div class="col-lg-4 col-md-6 mb-4">
                    <h5 class="text-white mb-3">Voluntariado Conectado RD</h5>
                    <p class="text-light">Conectamos personas con causas que importan para crear un impacto positivo en la sociedad dominicana.</p>
                </div>
                <div class="col-lg-2 col-md-6 mb-4">
                    <h6 class="text-white mb-3">Enlaces</h6>
                    <ul class="list-unstyled">
                        <li><a href="/Home/Index" class="text-light text-decoration-none">Inicio</a></li>
                        <li><a href="#como-funciona" class="text-light text-decoration-none">¿Cómo funciona?</a></li>
                        <li><a href="/Account/Registro" class="text-light text-decoration-none">Registro</a></li>
                        <li><a href="#contacto" class="text-light text-decoration-none">Contacto</a></li>
                    </ul>
                </div>
                <div class="col-lg-3 col-md-6 mb-4">
                    <h6 class="text-white mb-3">Legal</h6>
                    <ul class="list-unstyled">
                        <li><a href="/Home/Privacy" class="text-light text-decoration-none">Política de privacidad</a></li>
                        <li><a href="/Home/Terms" class="text-light text-decoration-none">Términos de uso</a></li>
                    </ul>
                </div>
                <div class="col-lg-3 col-md-6 mb-4">
                    <h6 class="text-white mb-3">Contacto</h6>
                    <p class="text-light mb-2">
                        <i class="fas fa-envelope me-2"></i>@contactInfo.Email
                    </p>
                    <p class="text-light mb-2">
                        <i class="fas fa-phone me-2"></i>@contactInfo.Phone
                    </p>
                    @if (!string.IsNullOrEmpty(contactInfo.Address))
                    {
                        <p class="text-light mb-2">
                            <i class="fas fa-map-marker-alt me-2"></i>@contactInfo.Address
                        </p>
                    }
                    @if (!string.IsNullOrEmpty(contactInfo.SocialMedia.Facebook) || 
                         !string.IsNullOrEmpty(contactInfo.SocialMedia.Twitter) || 
                         !string.IsNullOrEmpty(contactInfo.SocialMedia.Instagram))
                    {
                        <div class="mt-3">
                            <h6 class="text-white mb-2">Síguenos</h6>
                            <div class="d-flex gap-2">
                                @if (!string.IsNullOrEmpty(contactInfo.SocialMedia.Facebook))
                                {
                                    <a href="@contactInfo.SocialMedia.Facebook" target="_blank" class="text-light">
                                        <i class="fab fa-facebook fa-lg"></i>
                                    </a>
                                }
                                @if (!string.IsNullOrEmpty(contactInfo.SocialMedia.Twitter))
                                {
                                    <a href="@contactInfo.SocialMedia.Twitter" target="_blank" class="text-light">
                                        <i class="fab fa-twitter fa-lg"></i>
                                    </a>
                                }
                                @if (!string.IsNullOrEmpty(contactInfo.SocialMedia.Instagram))
                                {
                                    <a href="@contactInfo.SocialMedia.Instagram" target="_blank" class="text-light">
                                        <i class="fab fa-instagram fa-lg"></i>
                                    </a>
                                }
                                @if (!string.IsNullOrEmpty(contactInfo.SocialMedia.LinkedIn))
                                {
                                    <a href="@contactInfo.SocialMedia.LinkedIn" target="_blank" class="text-light">
                                        <i class="fab fa-linkedin fa-lg"></i>
                                    </a>
                                }
                            </div>
                        </div>
                    }
                </div>
            </div>
            <hr class="border-light">
            <div class="row">
                <div class="col-12 text-center">
                    <p class="text-light mb-0">&copy; 2025 Voluntariado Conectado RD. Todos los derechos reservados.</p>
                </div>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>