<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/VoluntariosConectadosRD.styles.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <style>
        .dashboard-nav {
            display: flex;
            gap: 20px;
            align-items: center;
        }

        .dashboard-tab {
            color: #666;
            text-decoration: none;
            padding: 10px 15px;
            border-radius: 8px;
            transition: all 0.3s ease;
            font-weight: 500;
            position: relative;
        }

        .dashboard-tab:hover {
            color: #0d6efd;
            background-color: rgba(13, 110, 253, 0.1);
        }

        .dashboard-tab.active {
            color: #0d6efd;
            background-color: rgba(13, 110, 253, 0.1);
            font-weight: 600;
        }

        .dashboard-title {
            font-size: 2.2rem;
            font-weight: 700;
            color: #fff;
            background: linear-gradient(135deg, #2522e7 0%, #5850c9 15%, #6a5cd9 30%, #8645c2 50%, #434294 60%, rgb(85, 84, 202) 75%, #5e54b6 90%, #4e38af 100%);
            border-radius: 12px;
            padding: 18px 32px;
            box-shadow: 0 4px 15px rgba(37, 34, 231, 0.3);
        }

        .profile-dropdown {
            position: relative;
            display: inline-block;
        }

        .profile-dropdown-content {
            display: none;
            position: absolute;
            right: 0;
            background-color: #f9f9f9;
            min-width: 200px;
            box-shadow: 0px 8px 16px 0px rgba(0,0,0,0.2);
            z-index: 1;
            border-radius: 8px;
            overflow: hidden;
        }

        .profile-dropdown:hover .profile-dropdown-content {
            display: block;
        }

        .profile-dropdown-content a {
            color: black;
            padding: 12px 16px;
            text-decoration: none;
            display: block;
            transition: background-color 0.3s;
        }

        .profile-dropdown-content a:hover {
            background-color: #f1f1f1;
        }

        .profile-dropdown-content a:first-child {
            border-top-left-radius: 8px;
            border-top-right-radius: 8px;
        }

        .profile-dropdown-content a:last-child {
            border-bottom-left-radius: 8px;
            border-bottom-right-radius: 8px;
        }
    </style>
</head>
<body>
    <header class="dashboard-header shadow-sm bg-white">
        <div class="container-fluid d-flex align-items-center py-2 px-4">
            <div class="d-flex align-items-center flex-shrink-0">
                <a class="navbar-brand d-flex align-items-center" style="text-decoration: none; color: inherit;" href="/">
                    <div class="text-start me-2">
                        <strong class="d-block text-uppercase fw-bold" style="font-size: 1.1rem; text-align:right;">Voluntariado<br />Conectado</strong>
                    </div>
                    <span class="fw-bold rd-danger" style="font-size: 9.8em;">R</span><span class="fw-bold rd-primary" style="font-size: 9.8em;">D</span>
                </a>
            </div>
            <div class="flex-grow-1 d-flex justify-content-end">
                <nav class="dashboard-nav d-flex align-items-center" style="margin-right: 20px;">
                    @{
                        var userRole = Context.Session.GetString("UserRole") ?? "Voluntario";
                        var userName = Context.Session.GetString("UserName") ?? "Usuario";
                        var userImage = Context.Session.GetString("UserImage") ?? "";
                    }
                    
                    @if (userRole == "Admin")
                    {
                        <a href="/Dashboard/Inicio" class="dashboard-tab @(ViewContext.RouteData.Values["Action"]?.ToString() == "Inicio" || ViewContext.RouteData.Values["Controller"]?.ToString() == "Events" ? "active" : "")">Inicio</a>
                    }
                    else if (userRole == "ONG")
                    {
                        <a href="/Dashboard/Inicio" class="dashboard-tab @(ViewContext.RouteData.Values["Action"]?.ToString() == "Inicio" || ViewContext.RouteData.Values["Controller"]?.ToString() == "Events" ? "active" : "")">Inicio</a>
                    }
                    else
                    {
                        <a href="/Dashboard/Inicio" class="dashboard-tab @(ViewContext.RouteData.Values["Action"]?.ToString() == "Inicio" || ViewContext.RouteData.Values["Controller"]?.ToString() == "Events" ? "active" : "")">Inicio</a>
                    }
                    
                    <a href="/Dashboard/VoluntariosVistas" class="dashboard-tab @(ViewContext.RouteData.Values["Action"]?.ToString() == "VoluntariosVistas" || ViewContext.RouteData.Values["Action"]?.ToString() == "VoluntariosAdmin" ? "active" : "")">Voluntarios</a>
                    
                    @if (userRole == "Admin")
                    {
                        <a href="/Dashboard/ONGAdmin" class="dashboard-tab @(ViewContext.RouteData.Values["Action"]?.ToString() == "ONGAdmin" ? "active" : "")">Gestionar ONGs</a>
                    }
                    else
                    {
                        <a href="/Dashboard/Reportes" class="dashboard-tab @(ViewContext.RouteData.Values["Action"]?.ToString() == "Reportes" ? "active" : "")">Registro de Impacto</a>
                    }
                </nav>

            </div>
            <div class="d-flex align-items-center gap-3 flex-shrink-0">
                <button class="btn btn-link p-0 position-relative" id="notificationBtn" title="Notificaciones">
                    <i class="bi bi-bell" style="font-size: 1.6rem; color: #0d6efd;"></i>
                    <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger notification-badge" id="notificationCount" style="display: none;">
                        0
                    </span>
                    <span class="notification-dot" id="notificationDot"></span>
                </button>
                <div class="dropdown">
                    <button class="btn btn-link p-0 dropdown-toggle-no-arrow"
                            data-bs-toggle="dropdown"
                            aria-expanded="false"
                            style="text-decoration: none;">
                        <div class="card d-flex align-items-center p-2"
                             style="border-radius: 12px; border: 1px solid #e3f2fd; background: #fff;">
                            <div class="d-flex align-items-center">
                                @if (userRole == "Admin")
                                {
                                    <i class="bi bi-person-gear" style="font-size: 2rem; color: #dc3545; margin-right: 12px;"></i>
                                }
                                else if (!string.IsNullOrEmpty(userImage))
                                {
                                    <img src="@userImage"
                                         alt="Foto de perfil"
                                         width="50" height="50"
                                         style="border-radius: 10px; margin-right: 12px;">
                                }
                                else
                                {
                                    <i class="bi bi-person" style="font-size: 2rem; color: #6c757d; margin-right: 12px;"></i>
                                }
                                <div>
                                    <div style="font-size: 0.8rem; color: #666;">Bienvenido de vuelta,</div>
                                    <div class="fw-bold" style="color: #333; font-size: 1rem;">@userName</div>
                                </div>
                                <i class="bi bi-chevron-down ms-2" style="color: #000;"></i>
                            </div>
                        </div>
                    </button>
                    <ul class="dropdown-menu dropdown-menu-end">
                        <li><a class="dropdown-item" href="/Dashboard/Profile">Mi perfil</a></li>
                        <li><a class="dropdown-item" asp-controller="Account" asp-action="Login">Cerrar sesión</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </header>
    <!-- Main Content Only - No Navbar or Footer for Dashboard -->
    <main role="main">
        @RenderBody()
    </main>

    <footer class="footer-section">
        <div class="container">
            <div class="row">
                <div class="col-lg-4 col-md-6 mb-4">
                    <h5 class="text-white mb-3">Voluntariado Conectado RD</h5>
                    <p class="text-light">Conectamos personas con causas que importan para crear un impacto positivo en la sociedad dominicana.</p>
                </div>
                <div class="col-lg-2 col-md-6 mb-4">
                    <h6 class="text-white mb-3">Enlaces</h6>
                    <ul class="list-unstyled">
                        <li><a href="/Home/Index" class="text-light text-decoration-none">Inicio</a></li>
                        <li><a href="#como-funciona" class="text-light text-decoration-none">¿Cómo funciona?</a></li>
                        <li><a href="/Account/Registro" class="text-light text-decoration-none">Registro</a></li>
                        <li><a href="#contacto" class="text-light text-decoration-none">Contacto</a></li>
                    </ul>
                </div>
                <div class="col-lg-3 col-md-6 mb-4">
                    <h6 class="text-white mb-3">Legal</h6>
                    <ul class="list-unstyled">
                        <li><a href="/Home/Privacy" class="text-light text-decoration-none">Política de privacidad</a></li>
                        <li><a href="/Home/Terms" class="text-light text-decoration-none">Términos de uso</a></li>
                    </ul>
                </div>
                <div class="col-lg-3 col-md-6 mb-4">
                    <h6 class="text-white mb-3">Contacto</h6>
                    <p class="text-light mb-2">
                        <i class="fas fa-envelope me-2"></i>info@voluntariadoconectado.rd
                    </p>
                    <p class="text-light mb-2">
                        <i class="fas fa-phone me-2"></i>+1 (809) 555-0123
                    </p>
                </div>
            </div>
            <hr class="border-light">
            <div class="row">
                <div class="col-12 text-center">
                    <p class="text-light mb-0">&copy; 2025 Voluntariado Conectado RD. Todos los derechos reservados.</p>
                </div>
            </div>
        </div>
    </footer>

    <!-- Modal de Notificaciones -->
    <div class="modal fade" id="notificationModal" tabindex="-1" aria-labelledby="notificationModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="notificationModalLabel">
                        <i class="bi bi-bell me-2"></i>Notificaciones
                    </h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <div class="btn-group" role="group" aria-label="Filtros de notificaciones">
                            <input type="radio" class="btn-check" name="notificationFilter" id="filterAll" value="all" checked>
                            <label class="btn btn-outline-primary btn-sm" for="filterAll">Todas</label>
                            
                            <input type="radio" class="btn-check" name="notificationFilter" id="filterUnread" value="unread">
                            <label class="btn btn-outline-primary btn-sm" for="filterUnread">No leídas</label>
                            
                            <input type="radio" class="btn-check" name="notificationFilter" id="filterRead" value="read">
                            <label class="btn btn-outline-primary btn-sm" for="filterRead">Leídas</label>
                        </div>
                        <button type="button" class="btn btn-success btn-sm" id="markAllReadBtn">
                            <i class="bi bi-check-all me-1"></i>Marcar todas como leídas
                        </button>
                    </div>
                    
                    <div id="notificationsList" class="notifications-container">
                        <!-- Las notificaciones se cargarán dinámicamente aquí -->
                    </div>
                    
                    <div id="noNotifications" class="text-center py-4" style="display: none;">
                        <i class="bi bi-bell-slash" style="font-size: 3rem; color: #6c757d;"></i>
                        <p class="text-muted mt-2">No hay notificaciones para mostrar</p>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                </div>
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/notifications.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
