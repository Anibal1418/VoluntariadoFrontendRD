@using VoluntariosConectadosRD.Models.Configuration
@using Microsoft.Extensions.Options
@inject IOptions<ContactConfiguration> ContactOptions
@{
    var contactInfo = ContactOptions.Value;
}
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/toast-notifications.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/VoluntariosConectadosRD.styles.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    <!-- Fixed Navbar -->
    <nav class="navbar navbar-expand-lg navbar-light bg-white fixed-top shadow-sm">
        <div class="container">
            <a class="navbar-brand d-flex align-items-center" href="/">
                <div class="text-start me-2">
                    <strong class="d-block text-uppercase fw-bold" style="font-size: 1.1rem; text-align:right;">Voluntariado<br />Conectado</strong>
                </div>
                <span class="fw-bold rd-danger" style="font-size: 9.8em;">R</span><span class="fw-bold rd-primary" style="font-size: 9.8em;">D</span>
            </a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNav" aria-controls="mainNav" aria-expanded="false" aria-label="Menú">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="mainNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link fw-bold" href="/Home/Index">Inicio</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link fw-bold" href="/Home/ComoFunciona">¿Cómo funciona?</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link fw-bold" href="/Search">
                            <i class="bi bi-search me-1"></i>Buscar
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link fw-bold" href="/Messages">
                            <i class="bi bi-chat-dots me-1"></i>Mensajes
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link fw-bold" href="/Transparency">
                            <i class="fas fa-chart-line me-1"></i>Transparencia
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link fw-bold" href="/Account/Registro">Registro</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link fw-bold" href="/Account/Login">Iniciar sesión</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link fw-bold" href="/Home/Contacto">Contacto</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <main role="main">
        @RenderBody()
    </main>

    <!-- Footer -->
    <footer class="footer-section">
        <div class="container">
            <div class="row">
                <div class="col-lg-4 col-md-6 mb-4">
                    <h5 class="text-white mb-3">Voluntariado Conectado RD</h5>
                    <p class="text-light">Conectamos personas con causas que importan para crear un impacto positivo en la sociedad dominicana.</p>
                </div>
                <div class="col-lg-2 col-md-6 mb-4">
                    <h6 class="text-white mb-3">Enlaces</h6>
                    <ul class="list-unstyled">
                        <li><a href="/Home/Index" class="text-light text-decoration-none">Inicio</a></li>
                        <li><a href="/Home/ComoFunciona" class="text-light text-decoration-none">¿Cómo funciona?</a></li>
                        <li><a href="/Transparency" class="text-light text-decoration-none">Transparencia</a></li>
                        <li><a href="/Account/Registro" class="text-light text-decoration-none">Registro</a></li>
                        <li><a href="/Home/Contacto" class="text-light text-decoration-none">Contacto</a></li>
                    </ul>
                </div>
                <div class="col-lg-3 col-md-6 mb-4">
                    <h6 class="text-white mb-3">Legal</h6>
                    <ul class="list-unstyled">
                        <li><a href="/Home/Privacy" class="text-light text-decoration-none">Política de privacidad</a></li>
                        <li><a href="/Home/Terms" class="text-light text-decoration-none">Términos de uso</a></li>
                    </ul>
                </div>
                <div class="col-lg-3 col-md-6 mb-4">
                    <h6 class="text-white mb-3">Contacto</h6>
                    <p class="text-light mb-2">
                        <i class="fas fa-envelope me-2"></i>@contactInfo.Email
                    </p>
                    <p class="text-light mb-2">
                        <i class="fas fa-phone me-2"></i>@contactInfo.Phone
                    </p>
                    @if (!string.IsNullOrEmpty(contactInfo.Address))
                    {
                        <p class="text-light mb-2">
                            <i class="fas fa-map-marker-alt me-2"></i>@contactInfo.Address
                        </p>
                    }
                </div>
            </div>
            <hr class="border-light">
            <div class="row">
                <div class="col-12 text-center">
                    <p class="text-light mb-0">&copy; 2025 Voluntariado Conectado RD. Todos los derechos reservados.</p>
                </div>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/toast-notifications.js" asp-append-version="true"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
