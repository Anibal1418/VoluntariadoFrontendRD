@model ChangePasswordViewModel

@{
    ViewData["Title"] = "Cambiar Contraseña";
    Layout = "_DashboardLayout";
}

<div class="container-fluid py-4">
    <div class="row justify-content-center">
        <div class="col-xl-6">
            <div class="d-flex align-items-center mb-4">
                <h2 class="dashboard-title mb-0" style="font-size:2.2rem; font-weight:700; color:#fff; background:linear-gradient(135deg, #dc3545, #c82333); border-radius:12px; padding:18px 32px; box-shadow: 0 4px 15px rgba(220, 53, 69, 0.3);">CAMBIAR CONTRASEÑA</h2>
            </div>

            <div class="card shadow-lg border-0" style="border-radius: 20px;">
                <div class="card-body p-5">
                    <form id="changePasswordForm" method="post">
                        <div class="mb-4">
                            <label asp-for="CurrentPassword" class="form-label fw-semibold">Contraseña Actual</label>
                            <div class="input-group">
                                <input asp-for="CurrentPassword" type="password" class="form-control form-control-lg" style="border-radius: 12px 0 0 12px;" required>
                                <button class="btn btn-outline-secondary toggle-password" type="button" style="border-radius: 0 12px 12px 0;" data-target="CurrentPassword">
                                    <i class="bi bi-eye"></i>
                                </button>
                            </div>
                            <span asp-validation-for="CurrentPassword" class="text-danger"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="NewPassword" class="form-label fw-semibold">Nueva Contraseña</label>
                            <div class="input-group">
                                <input asp-for="NewPassword" type="password" class="form-control form-control-lg" style="border-radius: 12px 0 0 12px;" required>
                                <button class="btn btn-outline-secondary toggle-password" type="button" style="border-radius: 0 12px 12px 0;" data-target="NewPassword">
                                    <i class="bi bi-eye"></i>
                                </button>
                            </div>
                            <span asp-validation-for="NewPassword" class="text-danger"></span>
                            <div class="form-text">
                                <small>Debe contener al menos 8 caracteres, una mayúscula, una minúscula, un número y un carácter especial</small>
                            </div>
                        </div>

                        <div class="mb-4">
                            <label asp-for="ConfirmPassword" class="form-label fw-semibold">Confirmar Nueva Contraseña</label>
                            <div class="input-group">
                                <input asp-for="ConfirmPassword" type="password" class="form-control form-control-lg" style="border-radius: 12px 0 0 12px;" required>
                                <button class="btn btn-outline-secondary toggle-password" type="button" style="border-radius: 0 12px 12px 0;" data-target="ConfirmPassword">
                                    <i class="bi bi-eye"></i>
                                </button>
                            </div>
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>

                        <div class="password-strength-indicator mb-4" style="display: none;">
                            <div class="d-flex justify-content-between align-items-center">
                                <small class="text-muted">Fortaleza de la contraseña:</small>
                                <div class="strength-bars d-flex gap-1">
                                    <div class="strength-bar"></div>
                                    <div class="strength-bar"></div>
                                    <div class="strength-bar"></div>
                                    <div class="strength-bar"></div>
                                </div>
                            </div>
                        </div>

                        <div class="d-flex gap-3 mt-4">
                            <button type="submit" class="btn btn-danger btn-lg flex-fill" style="border-radius: 12px; background: linear-gradient(135deg, #dc3545, #c82333); border: none;">
                                <i class="bi bi-shield-lock me-2"></i>Cambiar Contraseña
                            </button>
                            <button type="button" class="btn btn-outline-secondary btn-lg flex-fill" onclick="window.history.back()" style="border-radius: 12px;">
                                <i class="bi bi-x-circle me-2"></i>Cancelar
                            </button>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Security Tips -->
            <div class="card mt-4" style="border-radius: 15px; background: #f8f9fa;">
                <div class="card-body p-4">
                    <h5 class="text-muted mb-3"><i class="bi bi-info-circle me-2"></i>Consejos de Seguridad</h5>
                    <ul class="text-muted mb-0" style="font-size: 14px;">
                        <li>Usa una contraseña única que no hayas utilizado en otros sitios</li>
                        <li>Combina letras mayúsculas, minúsculas, números y símbolos</li>
                        <li>Evita usar información personal como nombres o fechas</li>
                        <li>Considera usar un administrador de contraseñas</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
$(document).ready(function() {
    // Toggle password visibility
    $('.toggle-password').on('click', function() {
        const target = $(this).data('target');
        const input = $(`#${target}`);
        const icon = $(this).find('i');
        
        if (input.attr('type') === 'password') {
            input.attr('type', 'text');
            icon.removeClass('bi-eye').addClass('bi-eye-slash');
        } else {
            input.attr('type', 'password');
            icon.removeClass('bi-eye-slash').addClass('bi-eye');
        }
    });

    // Password strength indicator
    $('#NewPassword').on('input', function() {
        const password = $(this).val();
        updatePasswordStrength(password);
    });

    // Form submission
    $('#changePasswordForm').on('submit', function(e) {
        e.preventDefault();
        
        // Show loading
        const submitBtn = $(this).find('button[type="submit"]');
        const originalText = submitBtn.html();
        submitBtn.html('<i class="bi bi-hourglass-split me-2"></i>Cambiando...').prop('disabled', true);
        
        $.ajax({
            url: '@Url.Action("ChangePassword")',
            type: 'POST',
            data: $(this).serialize(),
            success: function(response) {
                if (response.success) {
                    toastr.success(response.message);
                    // Clear form
                    $('#changePasswordForm')[0].reset();
                    $('.password-strength-indicator').hide();
                } else {
                    toastr.error(response.message || 'Error al cambiar la contraseña');
                }
                submitBtn.html(originalText).prop('disabled', false);
            },
            error: function() {
                toastr.error('Error de conexión');
                submitBtn.html(originalText).prop('disabled', false);
            }
        });
    });
});

function updatePasswordStrength(password) {
    const indicator = $('.password-strength-indicator');
    const bars = $('.strength-bar');
    
    if (password.length === 0) {
        indicator.hide();
        return;
    }
    
    indicator.show();
    
    let strength = 0;
    
    // Length check
    if (password.length >= 8) strength++;
    
    // Uppercase check
    if (/[A-Z]/.test(password)) strength++;
    
    // Lowercase check
    if (/[a-z]/.test(password)) strength++;
    
    // Number check
    if (/\d/.test(password)) strength++;
    
    // Special character check
    if (/[^\da-zA-Z]/.test(password)) strength++;
    
    // Reset bars
    bars.removeClass('weak medium strong very-strong');
    
    // Update bars based on strength
    for (let i = 0; i < Math.min(strength, 4); i++) {
        const bar = bars.eq(i);
        if (strength <= 2) {
            bar.addClass('weak');
        } else if (strength === 3) {
            bar.addClass('medium');
        } else if (strength === 4) {
            bar.addClass('strong');
        } else {
            bar.addClass('very-strong');
        }
    }
}
</script>

<style>
    .strength-bar {
        width: 20px;
        height: 4px;
        background: #e9ecef;
        border-radius: 2px;
        transition: all 0.3s ease;
    }
    
    .strength-bar.weak {
        background: #dc3545;
    }
    
    .strength-bar.medium {
        background: #ffc107;
    }
    
    .strength-bar.strong {
        background: #198754;
    }
    
    .strength-bar.very-strong {
        background: #0d6efd;
    }
</style>