@model VoluntariosConectadosRD.Models.LoginViewModel

@{
    ViewData["Title"] = "Iniciar sesión - Voluntariado Conectado RD";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid py-5" style="background: linear-gradient(135deg, #2522e7 0%, #5850c9 15%, #6a5cd9 30%, #8645c2 50%, #434294 60%, rgb(85, 84, 202) 75%, #5e54b6 90%, #4e38af 100%); min-height: 100vh;">
    <div class="row justify-content-center align-items-center min-vh-100">
        <div class="col-12 col-sm-10 col-md-8 col-lg-6 col-xl-5" style="width: 60%;">
            <div class="card shadow-lg border-0" style="border-radius: 20px; overflow: hidden; width: 100%;">
                <div class="row g-0">
                    <!-- Form Column - Always visible -->
                    <div class="col-12 col-md-6">
                        <div class="p-3 p-md-4">
                            <div class="text-center mb-3 mb-md-4">
                                <h5 class="fw-bold text-uppercase text-muted" style="font-size: 0.85rem; letter-spacing: 0.1em;">Por un país unido a la causa</h5>
                            </div>
                            <form asp-action="Login" method="post" autocomplete="off">
                                <div class="mb-3">
                                    <label asp-for="Email" class="form-label fw-semibold text-dark">Correo electrónico</label>
                                    <input asp-for="Email" class="form-control form-control-lg border-2" type="email" placeholder="tu@email.com" style="border-radius: 12px; font-size: 0.9rem;" />
                                    <span asp-validation-for="Email" class="text-danger small"></span>
                                </div>
                                <div class="mb-3">
                                    <label asp-for="Password" class="form-label fw-semibold text-dark">Contraseña</label>
                                    <input asp-for="Password" class="form-control form-control-lg border-2" type="password" placeholder="••••••••" style="border-radius: 12px; font-size: 0.9rem;" />
                                    <span asp-validation-for="Password" class="text-danger small"></span>
                                </div>
                                <div class="d-flex justify-content-between align-items-center mb-3 mb-md-4">
                                    <div class="form-check">
                                        <input asp-for="Remember" class="form-check-input" style="width: 1.2rem; height: 1.2rem;" />
                                        <label asp-for="Remember" class="form-check-label text-muted">Recordarme</label>
                                    </div>
                                    <a href="/Account/ForgotPassword" class="text-decoration-none fw-semibold small" style="color: #dc3545;">¿Olvidaste tu contraseña?</a>
                                </div>
                                <button type="submit" class="btn btn-lg w-100 mb-3 fw-semibold" style="border-radius: 12px; background: linear-gradient(135deg, #ff6b6b 0%, #ee5a52 25%, #dc3545 50%, #c82333 75%, #bd2130 100%); border: none; color: white;">
                                    Iniciar sesión
                                </button>
                                <div class="text-center">
                                    <span class="text-muted">¿No tienes cuenta?</span> 
                                    <a href="/Account/Registro" class="text-decoration-none fw-semibold" style="color: #dc3545;">Regístrate aquí</a>
                                </div>
                            </form>
                        </div>
                    </div>
                    <!-- Image Column - Hidden on small screens -->
                    <div class="col-md-6 d-none d-md-block" style="background: linear-gradient(135deg, #ff6b6b 0%, #ee5a52 25%, #dc3545 50%, #c82333 75%, #bd2130 100%);">
                        <div class="d-flex align-items-center justify-content-center h-100 p-3 p-md-4">
                            <img src="~/images/voluntariosesion.jpg" alt="Voluntarios" class="img-fluid rounded-3 shadow" style="max-height: 300px; object-fit: cover;" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    /* Responsive adjustments */
    @@media (max-width: 768px) {
        .container-fluid {
            padding-top: 1rem !important;
            padding-bottom: 1rem !important;
        }
        
        .card {
            margin: 0.5rem;
        }
        
        .form-control-lg, .form-select-lg {
            font-size: 1rem !important;
            padding: 0.75rem 1rem !important;
        }
        
        .btn-lg {
            padding: 0.75rem 1rem !important;
            font-size: 1rem !important;
        }
        
        .alert {
            font-size: 0.7rem !important;
            padding: 0.5rem !important;
        }
    }
    
    @@media (max-width: 576px) {
        .col-12 {
            padding: 0 0.5rem;
        }
        
        .card {
            border-radius: 15px !important;
        }
        
        .form-control-lg, .form-select-lg {
            font-size: 0.9rem !important;
        }
        
        .btn-lg {
            font-size: 0.9rem !important;
        }
        
        .d-flex.justify-content-between {
            flex-direction: column;
            gap: 1rem;
            align-items: flex-start !important;
        }
        
        .text-end {
            text-align: left !important;
        }
    }
</style>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
    
    @if (TempData["MensajeExito"] != null)
    {
        @await Html.PartialAsync("_Exito", TempData["MensajeExito"]?.ToString() ?? "")
        <script>
            // Limpiar TempData inmediatamente
            @{ TempData.Remove("MensajeExito"); }
            
            document.addEventListener('DOMContentLoaded', function() {
                var redirectUrl = '@TempData["RedirectUrl"]';
                @{ TempData.Remove("RedirectUrl"); }
                mostrarExito('@Html.Raw(TempData["MensajeExito"]?.ToString() ?? "")', redirectUrl);
            });
        </script>
    }
    
    @if (TempData["MensajeError"] != null)
    {
        @await Html.PartialAsync("_Error", TempData["MensajeError"]?.ToString() ?? "")
        <script>
            // Limpiar TempData inmediatamente
            @{ TempData.Remove("MensajeError"); }
            
            document.addEventListener('DOMContentLoaded', function() {
                mostrarError('@Html.Raw(TempData["MensajeError"]?.ToString() ?? "")');
            });
        </script>
    }
}
