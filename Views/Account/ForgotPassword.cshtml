@{
    ViewData["Title"] = "Recuperar Contraseña - Voluntariado Conectado RD";
    Layout = "_Layout";
}

<div class="container-fluid min-vh-100 d-flex align-items-center" style="background: linear-gradient(135deg, #ffe6e6 0%, #fff0f0 100%);">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-5">
                <div class="text-center mb-5">
                    <h2 class="fw-bold" style="font-size: 2.5rem; background: linear-gradient(135deg, #ff6b6b 0%, #dc3545 100%); -webkit-background-clip: text; -webkit-text-fill-color: transparent;">
                        Recuperar Contraseña
                    </h2>
                    <p class="text-muted fs-5">Ingresa tu correo electrónico y te enviaremos instrucciones</p>
                </div>
                
                <div class="card border-0" style="border-radius: 20px; box-shadow: 0 10px 40px rgba(0, 0, 0, 0.1);">
                    <div class="card-body p-5">
                        <form method="post">
                            @if (!ViewData.ModelState.IsValid)
                            {
                                <div class="alert alert-danger" style="border-radius: 12px;">
                                    <div asp-validation-summary="All"></div>
                                </div>
                            }
                            
                            <div class="mb-4">
                                <label class="form-label fw-semibold text-muted">Correo Electrónico</label>
                                <input type="email" name="email" class="form-control form-control-lg" placeholder="tu@email.com" required
                                       style="border-radius: 12px; border: 2px solid #e0e0e0; padding: 12px 20px;">
                            </div>
                            
                            <button type="submit" class="btn btn-lg w-100 mb-3 fw-semibold" 
                                    style="border-radius: 12px; background: linear-gradient(135deg, #ff6b6b 0%, #ee5a52 25%, #dc3545 50%, #c82333 75%, #bd2130 100%); border: none; color: white;">
                                Enviar Instrucciones
                            </button>
                            
                            <div class="text-center pt-3 border-top">
                                <span class="text-muted">¿Recordaste tu contraseña?</span> 
                                <a href="/Account/Login" class="text-decoration-none fw-semibold" style="color: #dc3545;">Inicia sesión aquí</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>