</style>

<script>
    // Select all functionality
    document.getElementById('selectAll').addEventListener('change', function() {
        const checkboxes = document.querySelectorAll('.ong-checkbox');
        checkboxes.forEach(checkbox => {
            checkbox.checked = this.checked;
        });
    });

    // Search functionality
    document.getElementById('searchInput').addEventListener('input', function() {
        const searchTerm = this.value.toLowerCase();
        const rows = document.querySelectorAll('#ongsTable tbody tr');
        
        rows.forEach(row => {
            const text = row.textContent.toLowerCase();
            row.style.display = text.includes(searchTerm) ? '' : 'none';
        });
    });

    function editarONG(id) {
        alert('Función de edición de ONG ' + id + ' - En desarrollo');
    }

    function verificarONG(id) {
        if (confirm('¿Está seguro de que desea verificar esta ONG?')) {
            alert('ONG ' + id + ' verificada - En desarrollo');
        }
    }

    function aprobarONG(id) {
        if (confirm('¿Está seguro de que desea aprobar esta ONG?')) {
            alert('ONG ' + id + ' aprobada - En desarrollo');
        }
    }

    function reactivarONG(id) {
        if (confirm('¿Está seguro de que desea reactivar esta ONG?')) {
            alert('ONG ' + id + ' reactivada - En desarrollo');
        }
    }

    function eliminarONG(id) {
        if (confirm('¿Está seguro de que desea eliminar esta ONG? Esta acción no se puede deshacer.')) {
            alert('ONG ' + id + ' eliminada - En desarrollo');
        }
    }

    function agregarONG() {
        alert('Función de agregar ONG - En desarrollo');
    }

    function exportarONGs() {
        alert('Función de exportar ONGs - En desarrollo');
    }
</script> 
