@using VoluntariosConectadosRD.Models.DTOs
@{
    ViewData["Title"] = "Estadísticas del Voluntario - Voluntariado Conectado RD";
    Layout = "_DashboardLayout";
    var applications = ViewBag.VolunteerApplications;
    var hasApplications = applications != null;
    var volunteerId = ViewData["VolunteerId"] as int? ?? 0;
}

<div class="dashboard-bg py-4" style="background:#f6f8fa; min-height:100vh;">
    <div class="container">
        <!-- Header Section -->
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2 class="dashboard-title mb-0" style="font-size:2.2rem; font-weight:700; color:#fff; background:#7db9e8; border-radius:12px; padding:18px 32px;">ESTADÍSTICAS DEL VOLUNTARIO</h2>
                         <a href="/Dashboard/Reportes" class="btn btn-outline-primary back-btn">
                 <i class="bi bi-arrow-left me-2"></i>Volver al Registro
             </a>
        </div>

        <!-- Main Content -->
        <div class="row g-4">
            <!-- Left Section - KPI Cards -->
            <div class="col-lg-4">
                <div class="row g-3">
                    <!-- Horas de voluntariado -->
                    <div class="col-6">
                        <div class="kpi-card">
                            <div class="kpi-icon">
                                <i class="bi bi-clock text-white"></i>
                            </div>
                            <div class="kpi-content">
                                <div class="kpi-number">@(hasApplications ? "--" : "0")</div>
                                <div class="kpi-label">Horas de voluntariado</div>
                            </div>
                        </div>
                    </div>

                    <!-- Fondos recaudados -->
                    <div class="col-6">
                        <div class="kpi-card">
                            <div class="kpi-icon">
                                <i class="bi bi-currency-dollar text-white"></i>
                            </div>
                            <div class="kpi-content">
                                <div class="kpi-number">@(hasApplications ? "--" : "0") RD$</div>
                                <div class="kpi-label">Fondos recaudados</div>
                            </div>
                        </div>
                    </div>

                    <!-- Eventos aplicados -->
                    <div class="col-6">
                        <div class="kpi-card">
                            <div class="kpi-icon">
                                <i class="bi bi-people text-white"></i>
                            </div>
                            <div class="kpi-content">
                                <div class="kpi-number">@(hasApplications ? "--" : "0")</div>
                                <div class="kpi-label">Eventos aplicados</div>
                            </div>
                        </div>
                    </div>

                    <!-- Personas beneficiadas -->
                    <div class="col-6">
                        <div class="kpi-card">
                            <div class="kpi-icon">
                                <i class="bi bi-heart text-white"></i>
                            </div>
                            <div class="kpi-content">
                                <div class="kpi-number">@(hasApplications ? "--" : "0")</div>
                                <div class="kpi-label">Personas beneficiadas</div>
                            </div>
                        </div>
                    </div>

                    <!-- Estado del voluntario -->
                    <div class="col-6">
                        <div class="kpi-card">
                            <div class="kpi-icon">
                                <i class="bi bi-person-check text-white"></i>
                            </div>
                            <div class="kpi-content">
                                <div class="kpi-number">@(hasApplications ? "Activo" : "--")</div>
                                <div class="kpi-label">Estado</div>
                            </div>
                        </div>
                    </div>

                    <!-- Agenda de proyecto -->
                    <div class="col-6">
                        <div class="agenda-card">
                            <div class="agenda-content">
                                <div class="agenda-label">Agenda de proyecto</div>
                                <div class="date-picker-container">
                                    <input type="date" class="form-control date-picker" placeholder="mm/dd/yyyy">
                                    <i class="bi bi-calendar date-icon"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Right Section - Donations Chart -->
            <div class="col-lg-8">
                <div class="chart-card">
                    <div class="chart-header">
                        <div class="chart-title-section">
                            <div class="chart-controls">
                                <i class="bi bi-arrows-fullscreen chart-icon" id="expandChart" title="Expandir gráfico"></i>
                            </div>
                            <h3 class="chart-title">Estadísticas del Voluntario</h3>
                            <div class="chart-controls">
                                <i class="bi bi-bar-chart chart-icon chart-type-btn active" id="barChartBtn" title="Gráfico de barras"></i>
                                <i class="bi bi-pie-chart chart-icon chart-type-btn" id="pieChartBtn" title="Gráfico circular"></i>
                                <i class="bi bi-clock chart-icon" id="timeRangeBtn" title="Rango de tiempo"></i>
                            </div>
                        </div>
                        <div class="chart-subtitle">@(hasApplications ? "Datos disponibles desde la API" : "Conectando con el servidor...")</div>
                    </div>
                    
                    <div class="chart-container" id="chartContainer">
                        @if (hasApplications)
                        {
                            <div class="alert alert-info" role="alert">
                                <h5 class="alert-heading"><i class="bi bi-info-circle me-2"></i>Datos del Backend Disponibles</h5>
                                <p class="mb-0">Las estadísticas del voluntario se cargarán dinámicamente cuando se implementen los endpoints específicos de métricas.</p>
                            </div>
                        }
                        else
                        {
                            <div class="alert alert-warning" role="alert">
                                <h5 class="alert-heading"><i class="bi bi-exclamation-triangle me-2"></i>Conectando con el Servidor</h5>
                                <p class="mb-0">Las estadísticas del voluntario se cargarán desde la API. Verifica la conexión con el servidor.</p>
                            </div>
                        }
                        
                        <!-- Chart views will be dynamically populated -->
                        <div class="chart-view" id="barChartView" style="display: none;">
                            <div class="chart-bars">
                                <!-- Dynamic chart bars will be populated here -->
                            </div>
                            <div class="chart-labels">
                                <!-- Dynamic chart labels will be populated here -->
                            </div>
                        </div>
                         
                        <!-- Pie Chart View (Hidden by default) -->
                        <div class="chart-view" id="pieChartView" style="display: none;">
                            <div class="pie-chart-container">
                                <!-- Dynamic pie chart will be populated here -->
                                <div class="text-center text-muted">
                                    <i class="bi bi-pie-chart" style="font-size: 3rem;"></i>
                                    <div class="mt-2">Gráfico circular se generará con datos del backend</div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

