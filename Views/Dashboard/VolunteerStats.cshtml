<script>
document.addEventListener('DOMContentLoaded', function() {
    // Chart type switching
    const barChartBtn = document.getElementById('barChartBtn');
    const pieChartBtn = document.getElementById('pieChartBtn');
    const barChartView = document.getElementById('barChartView');
    const pieChartView = document.getElementById('pieChartView');
    
    // Expanded chart controls
    const expandedBarBtn = document.getElementById('expandedBarBtn');
    const expandedPieBtn = document.getElementById('expandedPieBtn');
    const expandedBarChart = document.getElementById('expandedBarChart');
    const expandedPieChart = document.getElementById('expandedPieChart');
    
    // Chart expansion
    const expandChartBtn = document.getElementById('expandChart');
    const expandedChartModal = new bootstrap.Modal(document.getElementById('expandedChartModal'));
    
    // Time range selection
    const timeRangeBtn = document.getElementById('timeRangeBtn');
    const timeRangeModal = new bootstrap.Modal(document.getElementById('timeRangeModal'));
    
    // Chart type switching in main view
    function switchChartType(type) {
        if (type === 'bar') {
            barChartView.style.display = 'block';
            pieChartView.style.display = 'none';
            barChartBtn.classList.add('active');
            pieChartBtn.classList.remove('active');
        } else {
            barChartView.style.display = 'none';
            pieChartView.style.display = 'block';
            pieChartBtn.classList.add('active');
            barChartBtn.classList.remove('active');
        }
    }
    
    // Chart type switching in expanded view
    function switchExpandedChartType(type) {
        if (type === 'bar') {
            expandedBarChart.style.display = 'block';
            expandedPieChart.style.display = 'none';
            expandedBarBtn.classList.add('active');
            expandedPieBtn.classList.remove('active');
        } else {
            expandedBarChart.style.display = 'none';
            expandedPieChart.style.display = 'block';
            expandedPieBtn.classList.add('active');
            expandedBarBtn.classList.remove('active');
        }
    }
    
    // Event listeners for main chart
    barChartBtn.addEventListener('click', () => switchChartType('bar'));
    pieChartBtn.addEventListener('click', () => switchChartType('pie'));
    
    // Event listeners for expanded chart
    expandedBarBtn.addEventListener('click', () => switchExpandedChartType('bar'));
    expandedPieBtn.addEventListener('click', () => switchExpandedChartType('pie'));
    
    // Expand chart button
    expandChartBtn.addEventListener('click', () => {
        expandedChartModal.show();
    });
    
    // Time range button
    timeRangeBtn.addEventListener('click', () => {
        timeRangeModal.show();
    });
    
    // Time range selection
    const timeOptions = document.querySelectorAll('.time-option');
    timeOptions.forEach(option => {
        option.addEventListener('click', function() {
            // Remove selected class from all options
            timeOptions.forEach(opt => opt.classList.remove('selected'));
            // Add selected class to clicked option
            this.classList.add('selected');
            
            // Get the selected range
            const range = this.getAttribute('data-range');
            console.log('Selected time range:', range);
            
            // Here you would typically update the chart data based on the selected range
            // For now, we'll just close the modal
            setTimeout(() => {
                timeRangeModal.hide();
            }, 500);
        });
    });
    
    // Chart container click to expand
    const chartContainer = document.getElementById('chartContainer');
    chartContainer.addEventListener('click', (e) => {
        // Don't expand if clicking on controls
        if (e.target.closest('.chart-controls')) {
            return;
        }
        expandedChartModal.show();
    });
    
    // Add hover effect to chart container
    chartContainer.style.cursor = 'pointer';
    chartContainer.addEventListener('mouseenter', () => {
        chartContainer.style.transform = 'scale(1.02)';
        chartContainer.style.transition = 'transform 0.3s ease';
    });
    
    chartContainer.addEventListener('mouseleave', () => {
        chartContainer.style.transform = 'scale(1)';
    });
    
    // Initialize with bar chart
    switchChartType('bar');
    switchExpandedChartType('bar');
});
</script>

