<script>
    function updateChart(period) {
        // Update button text
        const dropdownButton = document.querySelector('[data-bs-toggle="dropdown"]');
        let buttonText = '';
        switch(period) {
            case 'month':
                buttonText = 'Último mes';
                break;
            case 'semester':
                buttonText = 'Último semestre';
                break;
            case 'year':
                buttonText = 'Último año';
                break;
        }
        dropdownButton.innerHTML = buttonText + ' <i class="bi bi-chevron-down"></i>';
        
        // In a real implementation, this would fetch new data and update the chart
        // For now, just show a message
        console.log('Chart updated for period:', period);
    }
</script>

