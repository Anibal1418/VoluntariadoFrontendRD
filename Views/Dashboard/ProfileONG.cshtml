@using VoluntariosConectadosRD.Models.DTOs
@{
    ViewData["Title"] = "Dashboard ONG - Voluntariado Conectado RD";
    Layout = "_DashboardLayout";
    var orgProfile = ViewBag.OrganizationProfile as VoluntariadoConectadoRD.Models.DTOs.OrganizationProfileDto;
    var userInfo = ViewBag.UserInfo as UserInfoDto;
    var orgStats = ViewBag.OrganizationStats as OrganizationStatsDto;
    var orgEvents = ViewBag.OrganizationEvents as IEnumerable<OrganizationEventDto>;
    var hasOrgProfile = orgProfile != null;
    var hasOrgStats = orgStats != null;
    var hasOrgEvents = orgEvents != null;
}

<div class="dashboard-bg py-4" style="background:#f6f8fa; min-height:100vh;">
    <div class="container">
        <!-- Header Section with Logo and Mission -->
        <div class="card mb-4" style="border-radius:16px; border: none; box-shadow: 0 2px 12px rgba(0,0,0,0.07);">
            <div class="card-body p-4">
                <div class="d-flex align-items-center mb-3">
                    <form enctype="multipart/form-data" id="uploadPhotoForm">
                        <label for="profilePhoto" class="mb-2" style="cursor:pointer;">
                            <img src="@(hasOrgProfile && !string.IsNullOrEmpty(orgProfile.LogoUrl) ? orgProfile.LogoUrl : "~/images/companylogo.jpg")" alt="Logo de @(hasOrgProfile ? orgProfile.Nombre : "Organización")" class="rounded-circle mb-2" width="120px" height="120px">
                        </label>
                        <input type="file" id="profilePhoto" name="profilePhoto" accept="image/*" style="display:none;" onchange="document.getElementById('uploadPhotoForm').submit();">
                    </form>
                    <div>
                        <h1 class="mb-1" style="font-size: 2rem; font-weight: 700; color: #2c3e50;">@(hasOrgProfile ? orgProfile.Nombre : userInfo?.Organizacion?.Nombre ?? "Mi Organización")</h1>
                        <p class="mb-1" style="font-size: 1.1rem; color: #6c757d; max-width: 100%;">
                            @(hasOrgProfile && !string.IsNullOrEmpty(orgProfile.Descripcion) ? orgProfile.Descripcion : "Agrega una descripción para tu organización.")
                        </p>
                    </div>
                </div>
                
                <!-- Action Buttons -->
                <div class="d-flex justify-content-end mb-3 gap-3">
                    <a href="/Account/EditarONG/@(hasOrgProfile ? orgProfile.Id : userInfo?.Organizacion?.Id ?? 1)" class="btn btn-outline-primary btn-lg" style="border-radius: 12px; padding: 15px 30px; font-weight: 600; font-size: 1.1rem; box-shadow: 0 4px 12px rgba(13, 110, 253, 0.2); transition: all 0.3s ease; text-decoration: none; border: 2px solid #0d6efd; color: #0d6efd;">
                        <i class="bi bi-pencil-square me-2"></i>
                        Editar Perfil
                    </a>
                    <button class="btn btn-primary btn-lg reportes-btn" style="border-radius: 12px; padding: 15px 30px; font-weight: 600; font-size: 1.1rem; box-shadow: 0 4px 12px rgba(13, 110, 253, 0.3); transition: all 0.3s ease; text-decoration: none; border: none; background: linear-gradient(135deg, #0d6efd, #0b5ed7);" disabled>
                        <i class="bi bi-graph-up me-2"></i>
                        Ver Reportes
                    </button>
                </div>
                
                <!-- Key Metrics Cards -->
                <div class="row g-3">
                    <div class="col-md-3 col-6">
                        <div class="metric-card">
                            <div class="metric-icon">
                                <i class="bi bi-people text-white"></i>
                            </div>
                            <div class="metric-content">
                                <div class="metric-number">@(hasOrgStats ? orgStats.ActiveDonors : 0)</div>
                                <div class="metric-label">Donantes activos</div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3 col-6">
                        <div class="metric-card">
                            <div class="metric-icon">
                                <i class="bi bi-calendar-event text-white"></i>
                            </div>
                            <div class="metric-content">
                                <div class="metric-number">@(hasOrgStats ? orgStats.EventsRealized : 0)</div>
                                <div class="metric-label">Eventos realizados</div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3 col-6">
                        <div class="metric-card">
                            <div class="metric-icon">
                                <i class="bi bi-heart-fill text-white"></i>
                            </div>
                            <div class="metric-content">
                                <div class="metric-number">$@(hasOrgStats ? orgStats.TotalDonations.ToString("N0") : "0")</div>
                                <div class="metric-label">Donaciones totales</div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3 col-6">
                        <div class="metric-card">
                            <div class="metric-icon">
                                <i class="bi bi-bar-chart text-white"></i>
                            </div>
                            <div class="metric-content">
                                <div class="metric-number">@(hasOrgStats ? orgStats.ActiveProjects : 0)</div>
                                <div class="metric-label">Proyectos activos</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Main Content Cards -->
        <div class="row g-4">
            <!-- Historial de Donaciones -->
            <div class="col-lg-4">
                <div class="card h-100" style="border-radius:16px; border: none; box-shadow: 0 2px 12px rgba(0,0,0,0.07);">
                    <div class="card-body p-4">
                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <h4 class="mb-0" style="font-weight: 700; color: #2c3e50;">Historial de Donaciones</h4>
                        </div>
                        <p class="text-muted mb-2">Total recaudado este año</p>
                        <h2 class="mb-3" style="font-size: 2.5rem; font-weight: 700; color: #2c3e50;">$@(hasOrgStats ? orgStats.TotalDonations.ToString("N0") : "0")</h2>
                        
                        <div class="mb-3">
                            <div class="dropdown">
                                <button class="btn btn-outline-secondary btn-sm" type="button" data-bs-toggle="dropdown">
                                    Último semestre <i class="bi bi-chevron-down"></i>
                                </button>
                                <ul class="dropdown-menu">
                                    <li><a class="dropdown-item" href="javascript:void(0)" onclick="updateChart('month')">Último mes</a></li>
                                    <li><a class="dropdown-item" href="javascript:void(0)" onclick="updateChart('semester')">Último semestre</a></li>
                                    <li><a class="dropdown-item" href="javascript:void(0)" onclick="updateChart('year')">Último año</a></li>
                                </ul>
                            </div>
                        </div>

                        <!-- Chart Placeholder -->
                        <div class="chart-container mb-4">
                            <div class="chart-bars">
                                @if (hasOrgStats && orgStats.MonthlyDonations.Any())
                                {
                                    var maxAmount = orgStats.MonthlyDonations.Max(d => d.Amount);
                                    foreach (var donation in orgStats.MonthlyDonations)
                                    {
                                        var heightPercentage = maxAmount > 0 ? (double)(donation.Amount / maxAmount) * 100 : 0;
                                        <div class="chart-bar" style="height: @(heightPercentage)%;" title="@donation.Month: $@(donation.Amount.ToString("N0"))"></div>
                                    }
                                }
                                else
                                {
                                    <div class="chart-bar" style="height: 0%;" title="No data"></div>
                                    <div class="chart-bar" style="height: 0%;" title="No data"></div>
                                    <div class="chart-bar" style="height: 0%;" title="No data"></div>
                                    <div class="chart-bar" style="height: 0%;" title="No data"></div>
                                    <div class="chart-bar" style="height: 0%;" title="No data"></div>
                                    <div class="chart-bar" style="height: 0%;" title="No data"></div>
                                }
                            </div>
                            <div class="chart-labels">
                                @if (hasOrgStats && orgStats.MonthlyDonations.Any())
                                {
                                    foreach (var donation in orgStats.MonthlyDonations)
                                    {
                                        <span>@donation.Month</span>
                                    }
                                }
                                else
                                {
                                    <span>Ene</span><span>Feb</span><span>Mar</span><span>Abr</span><span>May</span><span>Jun</span>
                                }
                            </div>
                        </div>

                        <!-- Metrics Below Chart -->
                        <div class="row g-2">
                            <div class="col-4">
                                <div class="metric-mini-card">
                                    <div class="metric-mini-number">$@(hasOrgStats ? orgStats.AverageDonation.ToString("N0") : "0")</div>
                                    <div class="metric-mini-label">Donación promedio</div>
                                </div>
                            </div>
                            <div class="col-4">
                                <div class="metric-mini-card">
                                    <div class="metric-mini-number">+@(hasOrgStats ? orgStats.NewDonors : 0)</div>
                                    <div class="metric-mini-label">Nuevos donantes</div>
                                </div>
                            </div>
                            <div class="col-4">
                                <div class="metric-mini-card">
                                    <div class="metric-mini-number">@(hasOrgStats ? orgStats.RecurrentDonorsPercentage.ToString("N0") : "0")%</div>
                                    <div class="metric-mini-label">Donantes recurrentes</div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Impacto Social -->
            <div class="col-lg-4">
                <div class="card h-100" style="border-radius:16px; border: none; box-shadow: 0 2px 12px rgba(0,0,0,0.07);">
                    <div class="card-body p-4">
                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <h4 class="mb-0" style="font-weight: 700; color: #2c3e50;">Impacto Social</h4>
                            <div class="impact-growth">
                                <i class="bi bi-arrow-up text-success"></i>
                                <span class="text-success fw-bold">+@(hasOrgStats ? orgStats.GrowthPercentage : 0)% este mes</span>
                            </div>
                        </div>
                        
                        <p class="text-muted mb-3">Distribución de impacto</p>
                        
                        <!-- Pie Chart Placeholder -->
                        <div class="pie-chart-container mb-4">
                            <div class="pie-chart">
                                <div class="pie-segment education" style="--percentage: 45%; --color: #87CEEB;"></div>
                                <div class="pie-segment health" style="--percentage: 25%; --color: #4682B4;"></div>
                                <div class="pie-segment environment" style="--percentage: 20%; --color: #2E4A6B;"></div>
                                <div class="pie-segment others" style="--percentage: 10%; --color: #B0C4DE;"></div>
                            </div>
                            <div class="pie-legend">
                                @if (hasOrgStats && orgStats.ImpactDistribution.Any())
                                {
                                    foreach (var impact in orgStats.ImpactDistribution)
                                    {
                                        <div class="legend-item">
                                            <div class="legend-color" style="background: @impact.Color;"></div>
                                            <span>@impact.Category @(impact.Percentage.ToString("N0"))%</span>
                                        </div>
                                    }
                                }
                                else
                                {
                                    <div class="legend-item">
                                        <div class="legend-color" style="background: #87CEEB;"></div>
                                        <span>Educación 45%</span>
                                    </div>
                                    <div class="legend-item">
                                        <div class="legend-color" style="background: #4682B4;"></div>
                                        <span>Salud 25%</span>
                                    </div>
                                    <div class="legend-item">
                                        <div class="legend-color" style="background: #2E4A6B;"></div>
                                        <span>Medio ambiente 20%</span>
                                    </div>
                                    <div class="legend-item">
                                        <div class="legend-color" style="background: #B0C4DE;"></div>
                                        <span>Otros 10%</span>
                                    </div>
                                }
                            </div>
                        </div>

                        <!-- Beneficiaries and Communities -->
                        <div class="impact-metrics">
                            <div class="impact-metric mb-3">
                                <div class="impact-label">Personas beneficiadas</div>
                                <div class="impact-number">@(hasOrgStats ? orgStats.PeopleBenefited.ToString("N0") : "0")</div>
                                <div class="impact-growth-small">
                                    <i class="bi bi-arrow-up text-success"></i>
                                    <span class="text-success">+18% desde el año anterior</span>
                                </div>
                            </div>
                            <div class="impact-metric">
                                <div class="impact-label">Comunidades alcanzadas</div>
                                <div class="impact-number">@(hasOrgStats ? orgStats.CommunitiesReached : 0)</div>
                                <div class="impact-growth-small">
                                    <i class="bi bi-arrow-up text-success"></i>
                                    <span class="text-success">+@(hasOrgStats ? orgStats.NewCommunities : 0) nuevas</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Participación en Eventos -->
            <div class="col-lg-4">
                <div class="card h-100" style="border-radius:16px; border: none; box-shadow: 0 2px 12px rgba(0,0,0,0.07);">
                    <div class="card-body p-4">
                        <h4 class="mb-3" style="font-weight: 700; color: #2c3e50;">Participación en Eventos</h4>
                        
                        <div class="table-responsive">
                            <table class="table table-borderless event-table">
                                <thead>
                                    <tr>
                                        <th>Evento</th>
                                        <th>Fecha</th>
                                        <th>Ubicación</th>
                                        <th>Participantes</th>
                                        <th>Estado</th>
                                        <th>Acciones</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (hasOrgEvents && orgEvents.Any())
                                    {
                                        foreach (var eventItem in orgEvents)
                                        {
                                            <tr>
                                                <td>
                                                    <div class="d-flex align-items-center">
                                                        <i class="@eventItem.Icon me-2 @eventItem.IconColor"></i>
                                                        <span>@eventItem.Name</span>
                                                    </div>
                                                </td>
                                                <td>@eventItem.Date.ToString("dd MMM yyyy")</td>
                                                <td>@eventItem.Location</td>
                                                <td>@eventItem.Participants</td>
                                                <td>
                                                    @if (eventItem.Status == "Completado")
                                                    {
                                                        <span class="badge bg-success">@eventItem.Status</span>
                                                    }
                                                    else if (eventItem.Status == "Próximo")
                                                    {
                                                        <span class="badge bg-primary">@eventItem.Status</span>
                                                    }
                                                    else
                                                    {
                                                        <span class="badge bg-secondary">@eventItem.Status</span>
                                                    }
                                                </td>
                                                <td><a href="/Events/Details/@eventItem.Id" class="link-primary">Ver detalles</a></td>
                                            </tr>
                                        }
                                    }
                                    else
                                    {
                                        <tr>
                                            <td colspan="6" class="text-center text-muted">No hay eventos disponibles</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

