        // Calendar navigation
        const prevBtn = document.querySelector('.prev-btn');
        const nextBtn = document.querySelector('.next-btn');

        prevBtn.addEventListener('click', function() {
            console.log('Previous period');
        });

        nextBtn.addEventListener('click', function() {
            console.log('Next period');
        });

        // Funcionalidad de Subida de Imagen Moderna
        let selectedFile = null;
        let userType = 'volunteer'; // Simular detección de tipo de usuario

        // Elementos del modal
        const uploadImageModal = document.getElementById('uploadImageModal');
        const imageFileInput = document.getElementById('imageFileInput');
        const selectFileBtn = document.getElementById('selectFileBtn');
        const uploadZone = document.getElementById('uploadZone');
        const imagePreview = document.getElementById('imagePreview');
        const previewContainer = document.getElementById('previewContainer');
        const previewPlaceholder = document.querySelector('.preview-placeholder');
        const previewImageWrapper = document.getElementById('previewImageWrapper');
        const removeImageBtn = document.getElementById('removeImageBtn');
        const saveImageBtn = document.getElementById('saveImageBtn');
        const cancelBtn = document.getElementById('cancelBtn');
        const uploadSpinner = document.getElementById('uploadSpinner');
        const uploadAlerts = document.getElementById('uploadAlerts');

        // Elementos de texto dinámico
        const modalTitle = document.getElementById('modalTitle');
        const currentImageLabel = document.getElementById('currentImageLabel');
        const previewLabel = document.getElementById('previewLabel');

        // Configurar texto según tipo de usuario
        function configureUserInterface() {
            if (userType === 'ong') {
                modalTitle.textContent = 'Cambiar Logo de la ONG';
                currentImageLabel.textContent = 'Logo Actual';
                previewLabel.textContent = 'Nuevo Logo';
            } else {
                modalTitle.textContent = 'Cambiar Foto de Perfil';
                currentImageLabel.textContent = 'Imagen Actual';
                previewLabel.textContent = 'Vista Previa';
            }
        }

        // Función para mostrar alertas
        function showAlert(message, type = 'danger') {
            uploadAlerts.innerHTML = `
                <div class="alert alert-${type} alert-dismissible fade show" role="alert">
                    <i class="bi bi-${type === 'success' ? 'check-circle' : 'exclamation-triangle'} me-2"></i>
                    ${message}
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            `;
        }

        // Función para limpiar alertas
        function clearAlerts() {
            uploadAlerts.innerHTML = '';
        }

        // Función para mostrar spinner
        function showSpinner() {
            uploadZone.style.display = 'none';
            uploadSpinner.style.display = 'block';
        }

        // Función para ocultar spinner
        function hideSpinner() {
            uploadZone.style.display = 'flex';
            uploadSpinner.style.display = 'none';
        }

        // Función para mostrar preview
        function showPreview(imageSrc) {
            imagePreview.src = imageSrc;
            previewPlaceholder.style.display = 'none';
            previewImageWrapper.style.display = 'block';
            previewImageWrapper.classList.add('slide-in');
            saveImageBtn.disabled = false;
        }

        // Función para ocultar preview
        function hidePreview() {
            previewPlaceholder.style.display = 'block';
            previewImageWrapper.style.display = 'none';
            previewImageWrapper.classList.remove('slide-in');
            saveImageBtn.disabled = true;
            selectedFile = null;
            imageFileInput.value = '';
        }

        // Función para validar archivo
        function validateFile(file) {
            const allowedTypes = ['image/jpeg', 'image/jpg', 'image/png'];
            const fileExtension = file.name.toLowerCase().split('.').pop();
            const allowedExtensions = ['jpg', 'jpeg', 'png'];
            const maxSize = 2 * 1024 * 1024; // 2MB

            if (!allowedTypes.includes(file.type) && !allowedExtensions.includes(fileExtension)) {
                showAlert('Solo se permiten archivos JPG, JPEG y PNG.');
                return false;
            }

            if (file.size > maxSize) {
                showAlert('El archivo no puede ser mayor a 2MB.');
                return false;
            }

            return true;
        }

        // Función para procesar imagen
        function processImage(file) {
            if (!validateFile(file)) return;

            selectedFile = file;
            showSpinner();

            const reader = new FileReader();
            reader.onload = function(e) {
                setTimeout(() => {
                    showPreview(e.target.result);
                    hideSpinner();
                    showAlert('Imagen procesada correctamente. Revisa la vista previa.', 'success');
                }, 1000);
            };
            reader.readAsDataURL(file);
        }

        // Event Listeners
        selectFileBtn.addEventListener('click', () => imageFileInput.click());

        imageFileInput.addEventListener('change', (e) => {
            const file = e.target.files[0];
            if (file) processImage(file);
        });

        uploadZone.addEventListener('dragover', (e) => {
            e.preventDefault();
            uploadZone.classList.add('dragover');
        });

        uploadZone.addEventListener('dragleave', (e) => {
            e.preventDefault();
            uploadZone.classList.remove('dragover');
        });

        uploadZone.addEventListener('drop', (e) => {
            e.preventDefault();
            uploadZone.classList.remove('dragover');
            
            const files = e.dataTransfer.files;
            if (files.length > 0) processImage(files[0]);
        });

        removeImageBtn.addEventListener('click', () => {
            hidePreview();
            clearAlerts();
        });

        saveImageBtn.addEventListener('click', () => {
            if (!selectedFile) {
                showAlert('No hay imagen seleccionada para guardar.');
                return;
            }

            showSpinner();
            saveImageBtn.disabled = true;

            setTimeout(() => {
                const currentProfileImage = document.getElementById('currentProfileImage');
                const modalCurrentImage = document.getElementById('modalCurrentImage');
                
                if (currentProfileImage) currentProfileImage.src = imagePreview.src;
                if (modalCurrentImage) modalCurrentImage.src = imagePreview.src;
                
                showAlert('Imagen guardada exitosamente.', 'success');
                hideSpinner();
                
                setTimeout(() => {
                    const modal = bootstrap.Modal.getInstance(uploadImageModal);
                    if (modal) modal.hide();
                }, 1500);
            }, 2000);
        });

        cancelBtn.addEventListener('click', () => {
            hidePreview();
            clearAlerts();
        });

        // Resetear modal cuando se cierra
        if (uploadImageModal) {
            uploadImageModal.addEventListener('hidden.bs.modal', () => {
                hidePreview();
                clearAlerts();
                hideSpinner();
            });
        }

        // Configurar interfaz al cargar
        configureUserInterface();




    });
</script>